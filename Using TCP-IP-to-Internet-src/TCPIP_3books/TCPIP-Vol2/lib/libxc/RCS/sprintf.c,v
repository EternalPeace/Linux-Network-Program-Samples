@/* sprintf.c - sprintf */

static sprntf();

/*------------------------------------------------------------------------
 *  sprintf  --  format arguments and place output in a string
 *------------------------------------------------------------------------
 */
sprintf(str, fmt, args)
        char *str;
        char *fmt;
{
        int     sprntf();
        char    *s;
	
        s = str;
        _doprnt(fmt, &args, sprntf, &s);
        *s++ = '\0';

        return((int)str);
}

/*------------------------------------------------------------------------
 *  sprntf  --  routine called by doprnt to handle each character
 *------------------------------------------------------------------------
 */

static	sprntf(cpp, c)
        char    **cpp;
        char    c;
{
        return(*(*cpp)++ = c);
}


@
