int
prints()
{
	struct idt	*pidt;
	char		*p;
	int	i;

	kprintf("idtr %X len %d base %X\n", &idtr, idtr.len, idtr.addr);
	p = (char *)idt;
	for (i=0; i<9; ++i) {
		kprintf("%d) %02x", i, *p++);
		kprintf(" %02x", *p++);
		kprintf(" %02x", *p++);
		kprintf(" %02x", *p++);
		kprintf(" %02x", *p++);
		kprintf(" %02x", *p++);
		kprintf(" %02x", *p++);
		kprintf(" %02x\n", *p++);
	}
