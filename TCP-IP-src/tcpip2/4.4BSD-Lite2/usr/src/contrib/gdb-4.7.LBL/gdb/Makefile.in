	@echo 'Expect 4 shift/reduce conflicts.'
	${YACC} $(srcdir)/c-exp.y
	-sed -e '/extern.*malloc/d' \
	     -e '/extern.*realloc/d' \
	     -e '/extern.*free/d' \
	  < y.tab.c > c-exp.tab.c
	-rm y.tab.c

