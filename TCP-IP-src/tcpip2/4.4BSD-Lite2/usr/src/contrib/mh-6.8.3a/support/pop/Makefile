################################################################
# popd
################################################################

inst-popd:	$(ETCDIR)/popd

$(ETCDIR)/popd:	xpopd
		-$(REMOVE) $@ zpopd
		-rm -f $@
		$(CP) xpopd $@
		-chmod 700 $@
		-@ls -l $@
		-@echo ""

popd:		xpopd

xpopd:		popd.o popser.o syslog.o \
			../../uip/dropsbr.o \
			$(LIBES2)
		$(LD) $(LDFLAGS) -o $@ popd.o popser.o syslog.o \
			../../uip/dropsbr.o \
			$(LDLIBS2) $(LDCURSES)

l-popd:;	$(LINT) $(LFLAGS) popd.c popser.c \
			../../uip/dropsbr.c \
			$(LLIBS2)


