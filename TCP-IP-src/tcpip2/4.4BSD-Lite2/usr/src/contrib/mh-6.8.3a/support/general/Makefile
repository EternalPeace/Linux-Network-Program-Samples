inst-aliases:	$(ETCDIR)/MailAliases

$(ETCDIR)/MailAliases:	MailAliases
		-@if [ ! -f $@ ]; then \
		    $(REMOVE) $@ zMailAliases; \
		    $(CP) MailAliases $@; \
		else \
		    echo "Will not overwrite existing $@"; \
		fi
		-@chmod $(FILPROT) $@
		-@ls -l $@
		-@echo ""


