OPTIONS	=	-DBIND -DBSD42 -DBSD43 -DDBMPWD -DMORE='"/usr/bin/more"' -DSYS5DIR -DNTOHLSWAP -DOVERHEAD -DVSPRINTF -DWHATNOW -DZONEINFO -DMHE -DMHRC -DMIME -DPOSIX -DBSD44 -DWAITINT -DUNISTD -DGCOS_HACK -DNORUSERPASS -DPOP2 -DRPOP -DPOPSERVICE='"pop3"' -DSENDMTS -DSMTP -DPOP -DBPOP -DNNTP -DSPRINTFTYPE=int -DTYPESIG=void -O -I..

CC	=	cc
CFLAGS	=	$(OPTIONS)
